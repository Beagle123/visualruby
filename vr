#!/usr/bin/env ruby 
#

start = Time.now
require "gtksourceview3"
require "yaml" #needed
require "net/http" #needed
require "net/https" #needed
require "find" #needed
require "fileutils" #needed
require "rubygems/installer"
require "rubygems/uninstaller"
require "rubygems/package"
require "rubygems/specification"

puts "Require Time:  " + (Time.now - start).to_s

#rubygems uses rubygems/package as of ruby 2.0.0
begin
	require "rubygems/builder"
rescue LoadError
end




#make program output in real time so errors visible
STDOUT.sync = true
STDERR.sync = true


my_path = File.expand_path(File.dirname(__FILE__))
if my_path =~ /^\/home\/eric\/vrp\/.*/  
	temp = File.expand_path(my_path + "/../vrlib") + "/vrlib.rb" 
puts "Require Time Before vrlib:  " + (Time.now - start).to_s 
	require temp
puts "Require Time After vrlib:  " + (Time.now - start).to_s 
else
	require "vrlib"
end



#require_all Dir.glob(my_path + "/bin/**/*.rb") # cant require_all root because .rb files in root will run????
require_rel 'bin/'

puts "Require Time:  " + (Time.now - start).to_s

VR_Main.new(ARGV).show


