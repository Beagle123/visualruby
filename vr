#!/ruby

require "gtk3"

def load_everything
  require "rubygems"
  require "gtksourceview3"
  require "yaml" #needed
  require "net/http" #needed
  require "net/https" #needed
  require "fileutils" #needed
  require "rubygems/installer"
  require "rubygems/uninstaller"
  require "rubygems/package"
  require "rubygems/specification"
  
  require 'require_all'


  require_relative 'lib/GladeGUI'
  require_relative 'lib/treeview/ViewCommon'
  require_relative 'lib/treeview/ListView'
  require_relative 'lib/treeview/TreeView'
  require_relative 'src/editor/VR_TextViewCommon' 


  require_rel 'lib/'
  require_rel 'src/' 
# require File.exists?("./../../lib/vrlib.rb") ?  "./../../lib/vrlib.rb" : "vrlib"
  
#  require_rel 'lib/GladeGUI.rb'

# @splash = nil

#   VR_Main.new(ARGV, @splash).show_glade()
  VR_Main.new(ARGV, @splash).show_glade()
# 
#   Gtk.main
end

$root = File.dirname(__FILE__)
 
@splash = Gtk::Window.new()
@splash.decorated = false
img = Gtk::Image.new(file: File.join($root, "img", "splash.png"))
img.visible = true
@splash.add(img)
@splash.position = :center_always
@splash.show_all
@splash.position = :center_always



GLib::Timeout.add(40) {
    while (Gtk.events_pending?)
      Gtk.main_iteration
    end     
    load_everything 
}

Gtk.main


